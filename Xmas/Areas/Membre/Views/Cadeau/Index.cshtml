
@{
    ViewBag.Title = "Cadeau";
}

@if (Model.Count == 0)
{
    <h2>Vous n'avez pas encore de cadeau dans votre liste.</h2>
}
else
{

    <table class="tabGroupe">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Magasin</th>
                <th>Prix</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Xmas.Models.CadeauInfo cadeau in Model)
            {
                <tr>

                    <td>@cadeau.Nom</td>
                    <td>@cadeau.Description</td>
                    <td>@cadeau.Magasin</td>
                    <td>@cadeau.Prix</td>
                    <td><a href="/Membre/Cadeau/Edit/@cadeau.IdCadeau">Edit</a></td>



                </tr>
            }
        </tbody>
    </table>
}
<a href="/Membre/Cadeau/Create">Nouveau Cadeau</a>

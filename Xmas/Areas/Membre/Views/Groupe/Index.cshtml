
@{
    ViewBag.Title = "Groupe";
}

@if (Model.Count == 0)
{
    <h2>Vous n'avez pas encore rejoint de groupe.</h2>
}
else
{

    <table class="tabGroupe">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Evènement</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Xmas.Models.GroupeInfo groupe in Model)
            {
                <tr>

                    <td>@groupe.Nom</td>
                    <td>@groupe.Description</td>
                    <td>@groupe.Evenement.Nom</td>
                    <td><a href="/Membre/Groupe/Edit/@groupe.IdGroupe">Edit</a></td>


                </tr>
            }
        </tbody>
    </table>
}

<a href="/Membre/Groupe/Create">Nouveau Groupe</a>